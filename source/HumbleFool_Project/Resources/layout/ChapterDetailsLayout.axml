<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:background="@drawable/bg"
    android:gravity="center"
    android:minWidth="25px"
    android:minHeight="25px"
    android:id="@+id/rootLayout">
    <LinearLayout
        android:orientation="vertical"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout1">
        <RelativeLayout
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/relativeLayout1"
            android:gravity="top|center">
            <ScrollView
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/scrollView"
                android:paddingBottom="10dp">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/linearLayout2">
                    <Toolbar
                        android:background="?android:attr/colorPrimary"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/toolbar1">
                        <TextView
                            android:text="Chapter:"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/chapterDetailToolbar1"
                            android:textColor="#ffffff"
                            android:textSize="20sp"
                            android:textStyle="bold" />
                        <TextView
                            android:text="01"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/chapterDetailToolbarNumber"
                            android:textColor="#ffffff"
                            android:textSize="20sp"
                            android:layout_marginLeft="10dp" />
                        <TextView
                            android:text="Chapter Name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/chapterDetailToolbarName"
                            android:textSize="20sp"
                            android:textColor="#ffffff"
                            android:layout_marginLeft="15dp"
                            android:lines="1"
                            android:scrollbars="horizontal" />
                    </Toolbar>
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/linearLayout3"
                        android:paddingBottom="10dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:paddingTop="5dp"
                        android:background="@drawable/textfield_roundhardedge"
                        android:layout_marginRight="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginBottom="2.5dp"
                        android:layout_marginTop="5dp">
                        <TextView
                            android:text="Instructor"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/chapterDetailLabel1"
                            android:textColor="#009688"
                            android:textSize="20sp"
                            android:layout_marginBottom="5dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginRight="5dp" />
                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/chapterDetailInstructorName"
                            android:background="@drawable/roundcard_layout"
                            android:textSize="17sp"
                            android:textColor="#000000"
                            android:maxLines="1"
                            android:gravity="top"
                            android:editable="false"
                            android:scrollbars="vertical"
                            android:scrollbarStyle="insideInset"
                            android:scrollHorizontally="false"
                            android:hint="Instructor Name"
                            android:textColorHint="#6d6d6d"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:paddingBottom="10dp"
                            android:paddingTop="10dp"
                            android:layout_marginBottom="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_marginTop="5dp" />
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/linearLayout3"
                        android:paddingBottom="10dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:paddingTop="5dp"
                        android:background="@drawable/textfield_roundhardedge"
                        android:layout_marginRight="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginBottom="2.5dp"
                        android:layout_marginTop="5dp">
                        <TextView
                            android:text="Brief Description"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/chapterDetailLabel2"
                            android:textColor="#009688"
                            android:textSize="20sp"
                            android:layout_marginBottom="5dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginRight="5dp" />
                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/chapterDetailDescription"
                            android:background="@drawable/roundcard_layout"
                            android:textSize="17sp"
                            android:textColor="#000000"
                            android:gravity="top"
                            android:editable="false"
                            android:scrollbars="vertical"
                            android:scrollbarStyle="insideInset"
                            android:scrollHorizontally="false"
                            android:hint="Description about Chapter"
                            android:textColorHint="#6d6d6d"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:paddingBottom="10dp"
                            android:paddingTop="10dp"
                            android:layout_marginBottom="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_marginTop="5dp" />
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/linearLayout3"
                        android:paddingBottom="10dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:paddingTop="5dp"
                        android:background="@drawable/textfield_roundhardedge"
                        android:layout_marginRight="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginBottom="2.5dp"
                        android:layout_marginTop="5dp">
                        <TextView
                            android:text="Content"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/chapterDetailLabel3"
                            android:textColor="#009688"
                            android:textSize="20sp"
                            android:layout_marginBottom="5dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginRight="5dp" />
                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/chapterDetailContent"
                            android:background="@drawable/roundcard_layout"
                            android:textSize="17sp"
                            android:textColor="#000000"
                            android:gravity="top"
                            android:editable="false"
                            android:scrollbars="vertical"
                            android:scrollbarStyle="insideInset"
                            android:scrollHorizontally="false"
                            android:hint="Chapter Content"
                            android:textColorHint="#6d6d6d"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:paddingBottom="10dp"
                            android:paddingTop="10dp"
                            android:layout_marginBottom="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_marginTop="5dp" />
                    </LinearLayout>
                </LinearLayout>
            </ScrollView>
        </RelativeLayout>
    </LinearLayout>
</android.support.design.widget.CoordinatorLayout>